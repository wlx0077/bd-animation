/*
  @num: px值
  @return: rem值
*/
r(num)
  if num isnt 0
    num = unit(num, rem)
    num / 40
  else
    0

full-screen()
  width 100%
  height 100%

//盒子尺寸
size(width, height)
  width: r(width)
  height: r(height)

//设置背景及盒子大小
box-background-img(url, imgW, imgH)
  size(imgW, imgH)
  background: url(url) center no-repeat
  background-size: 100% 100%

//定位水平居中
position-absolute-center()
  position: absolute
  //left: 50%
  //transform: translate(-50%)
  left 0
  right 0
  margin 0 auto

//背景居中
box-background-img-center(url, imgW, imgH)
  box-background-img(url, imgW, imgH)
  position-absolute-center()

//值定位
position-absolute-tl(top, left)
  position: absolute
  left: r(left)
  top: r(top)

position-absolute-tr(top, right)
  position: absolute
  right: r(right)
  top: r(top)

position-absolute-bl(bottom, left)
  position: absolute
  bottom: r(bottom)
  left: r(left)

position-absolute-br(bottom, right)
  position: absolute
  bottom: r(bottom)
  right: r(right)

//定位垂直水平居中
position-absolute-vertical-center()
  position: absolute
  top 0
  bottom 0
  left 0
  right 0
  margin auto